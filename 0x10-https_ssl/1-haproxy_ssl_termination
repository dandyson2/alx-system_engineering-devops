global
    maxconn 2000
    log /dev/log local0
    log /dev/log local1 notice

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend www-frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.dandyson2.tech/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    default_backend www-backend

backend www-backend
	server web-01 100.24.238.68 check
	server web-02 34.224.3.204 check
	
