#!/usr/bin/env bash
# Bash script that:
# Creates the file /var/run/myscript.pid containing its PID
# Displays To infinity and beyond indefinitely
# Displays I hate the kill command when receiving a SIGTERM signal
# Displays Y U no love me?! when receiving a SIGINT signal
# Deletes the file /var/run/myscript.pid and terminates itself when receiving a SIGQUIT or SIGTERM signal

# Function to clean up and terminate the script
cleanup_and_terminate() {
    echo "Terminating the script..."
    rm -f /var/run/myscript.pid
    exit
}

# Trap signals and call the corresponding functions
trap 'echo "I hate the kill command"' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'cleanup_and_terminate' SIGQUIT SIGTERM

# Save the PID of the script to the specified file
echo $$ > /var/run/myscript.pid

# Display the message indefinitely
echo "To infinity and beyond..."
while true; do
    sleep 1
done
