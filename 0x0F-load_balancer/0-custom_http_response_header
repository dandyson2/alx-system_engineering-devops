#!/usr/bin/env bash
# Update and install Nginx, configure custom X-Served-By header, and set up error pages

# Update package list and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Allow traffic through port 80 in the firewall
sudo ufw allow 'Nginx HTTP'

# Create necessary directory and set permissions
sudo mkdir -p /var/www/html
sudo chmod -R 755 /var/www

# Create index page and custom 404 error page
echo 'Hello World!' | sudo tee /var/www/html/index.html
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Configure Nginx settings: custom X-Served-By header and redirects
nginx_config="/etc/nginx/sites-enabled/default"

# Set custom X-Served-By header with server hostname
custom_header="add_header X-Served-By \$hostname;"
sudo sed -i "s/add_header X-Served-By.*/$custom_header/" "$nginx_config"

# Configure redirect for /redirect_me and custom 404 error page
redirect_config="location = /404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}\n\n\tlocation = \/redirect_me {\n\t\trewrite ^\/redirect_me https:\/\/www.blog.ehoneahobed.com permanent;\n\t}"
sudo sed -i "s/location = \/404.html.*/$redirect_config/" "$nginx_config"

# Restart Nginx to apply the changes
sudo service nginx restart
